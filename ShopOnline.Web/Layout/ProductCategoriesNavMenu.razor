@inherits ProductCategoriesNavMenuBase

@if (ProductCategoryDTO == null && ErrorMessage == null)
{
    <DisplaySpinner></DisplaySpinner>
}
else if (ErrorMessage != null)
{
    <DisplaySpinner ErrorMessage="@ErrorMessage"></DisplaySpinner>
}
else
{
    @foreach (var productCategory in ProductCategoryDTO)
    {
        var link = "/ProductsByCategory/" + productCategory.Id;
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span class="@productCategory.IconCSS"></span>&nbsp;@productCategory.Name
            </NavLink>
        </div>
    }
}